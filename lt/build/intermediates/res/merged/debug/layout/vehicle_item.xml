<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip"
    android:background="@drawable/app_panel">

    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"
        android:padding="3dip" >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/ic_action_alarms_dark" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0."
        android:id="@+id/u_id"
        android:textColor="#ff98b3ea"
        android:textSize="15dip"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_alignBaseline="@+id/text1"
        android:layout_alignBottom="@+id/text1"
        android:layout_toRightOf="@+id/thumbnail" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/text_label"
        android:textSize="15sp"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/u_id"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:layout_toLeftOf="@+id/imageButton"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPS ID"
        android:id="@+id/tvGPSID"
        android:textColor="@color/text_label"
        android:layout_below="@+id/text1"
        android:layout_alignRight="@+id/text1"
        android:layout_alignEnd="@+id/text1"
        android:layout_alignLeft="@+id/text1"
        android:layout_alignStart="@+id/text1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Vehicle Id"
        android:id="@+id/tvVehicleId"
        android:textColor="@color/text_label"
        android:layout_below="@+id/tvGPSID"
        android:layout_alignLeft="@+id/tvGPSID"
        android:layout_alignStart="@+id/tvGPSID"
        android:layout_alignRight="@+id/tvGPSID"
        android:layout_alignEnd="@+id/tvGPSID"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_action_collapse_right_dark"/>

    <TextView
        android:layout_width="0sp"
        android:layout_height="0sp"
        android:text="VIN"
        android:id="@+id/text4"
        android:layout_below="@+id/tvVehicleId"
        android:layout_alignLeft="@+id/tvVehicleId"
        android:layout_alignStart="@+id/tvVehicleId"
        android:layout_alignRight="@+id/tvVehicleId"
        android:layout_alignEnd="@+id/tvVehicleId"
        android:textColor="@color/text_label"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Status"
        android:id="@+id/text5"
        android:layout_below="@+id/thumbnail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/thumbnail"
        android:layout_alignEnd="@+id/thumbnail"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/light_blue"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Speed"
        android:id="@+id/text6"
        android:textColor="@color/text_label"
        android:layout_below="@+id/text4"
        android:layout_alignLeft="@+id/text4"
        android:layout_alignStart="@+id/text4"
        android:layout_alignRight="@+id/text4"
        android:layout_alignEnd="@+id/text4"/>

</RelativeLayout>