<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lixtracking.lt.activities.AlarmActivity"

    >


        <!--  <android.support.design.widget.TabLayout
              android:id="@+id/tabsBottom"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:background="@color/light_blue" />-->
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@color/background_light"


            android:layout_alignParentStart="true"

            android:id="@+id/tableRow">

            <ImageView
                android:id="@+id/ivGlobal"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="60dp"
                app:srcCompat="@drawable/ivglobal" />



            <ImageView
                android:id="@+id/ivAlarm"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="60dp"
                app:srcCompat="@drawable/ivalarm" />

            <ImageView
                android:id="@+id/ivSetting"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="60dp"
                app:srcCompat="@drawable/ivsetting" />

        </TableRow>


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/underconstruction"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
